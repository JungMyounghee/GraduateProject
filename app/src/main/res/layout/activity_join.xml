<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/detailOfRecipe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F4996B"
        android:gravity="center"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/joinImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/join" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" 우리집밥상에 오신 것을 환영합니다!"
        android:textSize="17sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 이메일 형식에 맞게 입력해주세요."
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 비밀번호는 6자리 이상으로 설정해주세요."
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="70dp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/emailicon" />

        <EditText
            android:id="@+id/join_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="아이디"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            tools:ignore="EditableContentDescCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/keyicon" />

        <EditText
            android:id="@+id/join_passwd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="비밀번호"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:ignore="EditableContentDescCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/join_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_event2"
        android:text="회원가입"
        android:textColor="#151515" />





</LinearLayout>