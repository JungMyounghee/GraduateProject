<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bigLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myPage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F4996B"
                android:gravity="center"
                android:text="Can Cook List"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,TextContrastCheck" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBarMedium"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:indeterminateTint="@android:color/holo_orange_dark"
            tools:visibility="gone" />

        <ListView
            android:id="@+id/canCookListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:visibility="invisible"></ListView>


        <LinearLayout
            android:id="@+id/cantCookLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/sadicon"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="재료가 부족합니다."
                android:textColor="#191717"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>